<fieldset id="gift-card-container">
  <h1 class="taxon-title"><%= Spree.t(:gift_certificates) %></h1>
  <%= render "spree/shared/error_messages", target: @gift_card %>
  <%= form_for @gift_card do |f| %>
    <div class="col-md-6 col-md-offset-3">
      <fieldset class="form-group">
        <%= f.label :variant_id, Spree.t(:value) %>
        <span class="required">*</span><br/>
        <%= f.select :variant_id, variants_values(@gift_card_variants), { selected: @variant.try(:id) }, class: 'form-control' %>
      </fieldset>

      <fieldset class="form-group">
        <%= f.label :name, Spree.t(:name_of_gift_recipient) %>
        <span class="required">*</span><br/>
        <%= f.text_field :name, class: 'form-control' %>
      </fieldset>

      <fieldset class="form-group">
        <%= f.label :note, Spree.t(:message_to_recipient) %><br/>
        <%= f.text_area :note, rows: 6, class: 'form-control' %>
      </fieldset>

      <fieldset class="form-group hidden">
        <%= f.hidden_field :currency, value: current_currency %>
      </fieldset>

      <%= f.submit Spree.t(:add_to_cart), class: 'btn btn-lg btn-dark btn-primary' %>
    </div>
  <% end %>
</fieldset>
